@model MediviseMVC.Models.Test

@{
    ViewBag.Title = "AddTest";
}

<h2>AddTest</h2>

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@using (Html.BeginForm()) {
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>Upcoming Tests</legend>
         
        <div class="editor-label">
            @Html.LabelFor(t => t.TestInfoId,"Test Name")
        </div>
        <div class="editor-field">
            @Html.DropDownList("TestInfoId")
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.TestDate)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.TestDate)
            @Html.ValidationMessageFor(model => model.TestDate)
        </div>

        <div class="editor-field">
            @Html.Hidden("PatientId")
        </div>

        <p>
            <input type="submit" value="Create" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Edit",new {id=ViewData["PatientId"]})
</div>
