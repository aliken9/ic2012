@model IEnumerable<MediviseMVC.Models.Alert>

<div id="AlertInfo">
<table>
 <tr>
   <th>Alert Type</th>
   <th>Alert Date</th>
   <th></th>
 </tr>
 @foreach (var alert in Model)
 {
   <tr>
     <td>@alert.AlertType.Name</td>
     <td>@alert.AlertDate</td>
     <td>@Ajax.ActionLink("Delete", "DeleteConfirmed", "AlertController", new {id=alert.AlertId}, new AjaxOptions { UpdateTargetId = "AlertInfo",HttpMethod="Post"})</td>
   </tr>
 }
</table>
</div>