@model MediviseMVC.Models.Message

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>
<fieldset>
    <legend>Message</legend>

    <div class="common-box">
        <div class="common-label">StartDate:</div>
        <div class="common-field">
            @Html.DisplayFor(model => model.StartDate)
        </div>
    </div>

    <div class="common-box">
        <div class="common-label">EndDate:</div>
        <div class="common-field">
            @Html.DisplayFor(model => model.EndDate)
        </div>
    </div>

    <div class="common-box">
        <div class="common-label">MessageText:</div>
        <div class="common-field">
            @Html.DisplayFor(model => model.MessageText)
        </div>
    </div>

    <div class="common-box">
        <div class="common-label">Patient:</div>
        <div class="common-field">
            @Html.DisplayFor(model => model.Patient.FirstName)
            @Html.DisplayFor(model => model.Patient.LastName)
        </div>
    </div>

</fieldset>
@using (Html.BeginForm()) {
    <p>
        <input type="submit" value="Delete" /> |
        @Html.ActionLink("Back to List", "Index")
    </p>
}
